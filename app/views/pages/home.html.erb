          <h3>Lokasi Gedung PPIKM</h3>
          <div class="content">
            <%= @map.div(:width => 300, :height => 250) %>
          </div>
        </div>

        <div class="block">
          <h3>Sponsor</h3>
          <div class="content">
            <p><img src="images/logokikm.jpg" class="iklan"></p>
          </div>
        </div>
  </div>


