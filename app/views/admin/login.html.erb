<div class=="depot_form">

  <fieldset>
    <legend>Silahkan Log In</legend>

    <% form_tag do %>
      <p>
        <label for="name">Nama :</label>
        <%= text_field_tag :name, params[:name] %>


        <label for="password">Password :</label>
        <%= password_field_tag :password, params[:password] %>
      </p>

      <p>
        <%= submit_tag "login" %>
      </p>

    <% end %>
  </fieldset>
</div>

