<h1>Forum E-PPIKM</h1>
<h2>Forum yang sudah ada</h2>
<ul>
   <% for forum in @forums %>
   <!-- create a list item for every forum -->
      <li>
         <!-- link to list action in messages -->
         <%= link_to ( forum.name, {:controller => 'messages',
            :action => 'list', :seller_id => forum.id},
            { :class => (forum.created_on < 5.minutes.ago ?
            'recent': nil ) } ) %>
      </li>
   <% end %> <!-- end for -->
</ul>
<% if ( session[ :seller ] ) then %>
   <!-- a user is logged in -->
   <h2>Manajemen Forum</h2>
   <ul>
      <li><%= link_to 'Tambah Forum', :action => 'new' %></li>
      <li><%= link_to 'Hapus Forum', :action => 'delete' %></li>
   </ul>
<% end %> <!-- end if -->

