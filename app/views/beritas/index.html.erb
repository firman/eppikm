<div id="product-list">
  <h1>Daftar Berita</h1>
  <table cellpadding="5" cellspacing="0">

  <% for berita in @beritas %>
    <tr valign="top" class="<%= cycle('list-line-odd', 'list-line-even') %>">


       <td width="60%">
         <span class="list-title"><%=h berita.title %></span><br />
         <%=h truncate(berita.content.gsub(/<.*?>/,''), 350) %>
       </td>

<td class="list-actions">
         <%= link_to 'Show', berita %><br/>
      
        <% if permitted_to? :edit, @berita %>   
         <%= link_to 'Edit', edit_berita_path(berita) %><br/>
        <% end %>
        
        <% if permitted_to? :destroy, @berita %>  
         <%= link_to 'Destroy', berita,
                     :confirm => 'Yakin nih, berita ini dihapus?',
                     :method => :delete %>
        <%end%>
       </td>

    </tr>
  <% end %>
  </table>
</div>
<br />
<% if permitted_to? :create, Berita.new %>  
  <%= link_to 'Bikin berita baru', new_berita_path %>
<%end%>
